{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "pnpm install",
  "buildCommand": "pnpm build",
  // En raison de l'utilisation d'alias de chemins dans le projet, le d√©ploiement sur Vercel n'est pas simple pour le moment : https://github.com/vercel/vercel/issues/2832
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    }
  ],
  "env": {
    "NODE_ENV": "development"
  }
}
